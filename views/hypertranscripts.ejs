
 <h1>Videos</h1>

 <% if(locals.hypertranscripts){ %>
	 <% var data = locals.hypertranscripts %>
	<table>
	<% for(var i=0; i < data.length; i++) { %>
	   <tr>
	   	<td><%= i+1 %> </td>

	     <td> 
	     	<a href=<%= '/hypertranscripts/'+data[i]._id+'/show' %> ><%= data[i].title %></a>
	     </td>
	     <td> <%= data[i].description %></td>
	     <td>
	     <a href=<%= '/hypertranscripts/'+data[i]._id+'/delete' %>  onclick="return confirm('Are you sure you want to delete this item?');"> delete</a>
	 </td>
	   </tr>
	<% } %>
	</table>

 <% }%>

 <% if(locals.hypertranscripts.length == 0){%>
 <div class="center">
<p >you currently don't have any videos</p>
<p >start by uploading a 
<a href="/hypertranscripts/new">new video</a>
</p>
</div>
<%}%>